<section class="main" id="test-result">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card card-flat">
                    <div class="card-content">
                        <div class="test-score success">
                            {$filling->percent}<span>%</span>
                        </div>
                        <h2>Splněno</h2>
                        <p>Správně bylo zodpovězeno <strong>{$filling->correctCount} z {$filling->questionsCount}</strong> otázek.</p>
                        <p>Minimální hranice pro splnění testu je <strong>50 %</strong>.</p>
                        {if $testSetup->canLookAtResults}
                            <a href="{plink testDisplay fillingId=>$filling->id}" class="btn">Prohlédnout</a>
                        {else}
                            <br>
                        {/if}
                        {if $testSetup->numberOfRepetitions === null || $summary->filledCount < $testSetup->numberOfRepetitions}
                            <a href="{plink testStart setupId=>$filling->setupId}">Spustit znovu</a>
                        {/if}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>