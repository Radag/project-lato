{block content}
{control topPanel}
<section class="main" id="message-detail">
    <div class="container offset-1">
        <div class="row">
            <div class="col s12" n:snippet="conversation-list">
                <div class="conversation">
                    {foreach $messages as $message}
                    <div class="message {if $message->fromMe}me{else}from{/if}">
                        <div class="card bubble paper-shadow">
                            <div class="card-header">
                                <h3 class="name truncate">
                                    <a href="{$message->user->urlId}">{$message->user->name} {$message->user->surname}</a>
                                </h3>
                                <div class="flex-spacer"></div>
                                <div class="date">{$message->created->format("h:m d.m.Y")}</div>
                            </div>
                            <div class="card-content">
                                <p>{$message->text}</p>
                            </div>
                        </div>
                        <div class="avatar">
                            <img src="{$message->user->profileImage|noescape}">
                        </div>
                    </div>
                    {/foreach}
                </div>
                {control privateMessageForm}
                <script>
                    $(document).ready(function () {
                        $('html,body').animate({ scrollTop: document.body.scrollHeight },"fast");
                    });
                </script>
            </div>
        </div>
    </div>
</section>